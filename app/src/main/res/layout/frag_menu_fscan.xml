<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="起始频率(单位MHz)"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="终止频率(单位MHz)"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="步长(单位kHz)"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="驻留时间"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="检波方式"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="射频工作模式"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="增益模式"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="射频衰减"/>

        <TextView
            style="@style/ContentActMenuDesc"
            android:text="记录保存"/>

        <Button
            android:id="@+id/btn_change_param"
            style="@style/MenuButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_frequence_start"
            style="@style/ContentActMenuValue.Edit.NumberDecimal"
            android:hint="请输入起始频率"/>

        <EditText
            android:id="@+id/et_frequence_end"
            style="@style/ContentActMenuValue.Edit.NumberDecimal"
            android:hint="请输入终止频率"/>

        <EditText
            android:id="@+id/et_fscan_step"
            style="@style/ContentActMenuValue.Edit.Number"
            android:hint="请输入步长"/>

        <TextView
            android:id="@+id/tv_duration"
            style="@style/ContentActMenuValue"
            android:text="0s"/>

        <TextView
            android:id="@+id/tv_detection_mode"
            style="@style/ContentActMenuValue"
            android:text="AVG"/>

        <TextView
            android:id="@+id/tv_band_scan_mode"
            style="@style/ContentActMenuValue"
            android:text="无"/>

        <TextView
            android:id="@+id/tv_increase_mode"
            style="@style/ContentActMenuValue"
            android:text="无"/>

        <TextView
            android:id="@+id/tv_rf_attenuation"
            style="@style/ContentActMenuValue"
            android:text="关"/>

        <CheckBox
            android:id="@+id/cb_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
    </LinearLayout>
</ScrollView>
